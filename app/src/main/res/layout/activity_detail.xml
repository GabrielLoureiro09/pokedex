        android:fontFamily="@font/jersey20"
        android:text="#003"
        android:textColor="@color/black"
        android:textSize="22dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/background_pkn_icon"
        android:layout_width="390dp"
        android:layout_height="390dp"
        android:layout_marginTop="88dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@mipmap/big_pokeball_icon" />

    <ImageView
        android:id="@+id/pkn_img"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_marginTop="148dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@mipmap/venosaur_icon" />

    <TextView
        android:id="@+id/pkn_type"
        android:layout_width="134dp"
        android:layout_height="27dp"
        android:layout_marginTop="459dp"
        android:background="@drawable/type_background"
        android:fontFamily="@font/jersey20"
