            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="56dp"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/jersey20"
            android:text="SPD"
            android:textColor="@color/black"
            android:textSize="24dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/sdef_txt" />

        <ProgressBar
            android:id="@+id/pb_hp"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="238dp"
            android:layout_height="24dp"
            android:layout_marginStart="40dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="56dp"
            android:layout_weight="1"
            android:max="255"
            android:progress="0"
            android:progressDrawable="@drawable/progress_hp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/hp_text"
            app:layout_constraintTop_toTopOf="parent" />

        <ProgressBar
            android:id="@+id/pb_atk"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="238dp"
            android:layout_height="24dp"
            android:layout_marginStart="28dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="56dp"
            android:layout_weight="1"
            android:max="255"
            android:progress="0"
            android:progressDrawable="@drawable/progress_attack"
