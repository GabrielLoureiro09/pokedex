        <TextView
            android:id="@+id/pkn_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:fontFamily="@font/jersey20"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:text="“There is a large flower on VENUSAUR's back. The flower is said to take on vivid colors if it gets plenty of nutrition and sunlight. The flower’s aroma soothes the emotions of people.”"
