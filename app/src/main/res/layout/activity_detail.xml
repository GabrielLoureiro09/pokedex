        <ImageView
            android:id="@+id/weakness2"
            android:layout_width="65dp"
            android:layout_height="24dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="36dp"
            app:layout_constraintStart_toEndOf="@+id/weakness"
            app:layout_constraintTop_toBottomOf="@+id/weight_en"
            tools:srcCompat="@tools:sample/avatars" />

        <ImageView
            android:id="@+id/weakness3"
            android:layout_width="65dp"
            android:layout_height="24dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="36dp"
            app:layout_constraintStart_toEndOf="@+id/weakness2"
            app:layout_constraintTop_toBottomOf="@+id/weight_pt"
            tools:srcCompat="@tools:sample/avatars" />

        <ImageView
            android:id="@+id/weakness5"
            android:layout_width="65dp"
            android:layout_height="24dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="3dp"
            app:layout_constraintStart_toEndOf="@+id/weakness4"
            app:layout_constraintTop_toBottomOf="@+id/weakness"
            tools:srcCompat="@tools:sample/avatars" />

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="23dp"
            android:layout_height="23dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="36dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView2"
